extend ../layout

block content
  .page.admin-list-page
    table
      thead
        th 电影名字
        th 电影导演
        th 国家
        th 上映年份
        th 录入时间
        th 查看
        th 更新
        th 删除
      each item in list
        tr
          td #{item.name}
          td #{item.director}
          td #{item.country}
          td #{item.year}
          td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
          td
            a(href="/movie/#{item._id}" class="check") 查看
          td
            a(href="/admin/update/#{item._id}" class="update") 修改
          td
            a(href="javascript:;" class="delete-btn" data-id="#{item._id}") 删除
  script(src="/js/index.js")